# Environment
NODE_ENV=development

# Server Configuration
PORT=8080
CORS_ORIGIN=http://localhost:3000

# Mock Mode (set to 'true' for development without Kubernetes)
MOCK_MODE=true

# Kubernetes Configuration (only needed when MOCK_MODE=false)
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=loopstacks-system

# Redis Configuration (optional, falls back to in-memory if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Database Configuration (optional for development)
DATABASE_URL=postgresql://user:password@localhost:5432/loopstacks

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000